<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.pcnexus.AccesibilidadVisualController" spacing="10" alignment="CENTER" prefWidth="400">
    <Label text="Accesibilidad" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="Ajuste de color:" />
    <ColorPicker fx:id="colorPicker" />

    <Label text="Ajuste de fuente:" />
    <HBox spacing="10" alignment="CENTER">
        <Button text="Aumentar" fx:id="btnAumentar" />
        <Button text="Disminuir" fx:id="btnDisminuir" />
    </HBox>

    <Label text="Texto de Ejemplo:" />
    <Label fx:id="textoEjemplo" text="Este es un ejemplo de texto." style="-fx-font-size: 14px;" />
</VBox>
